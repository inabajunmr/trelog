<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="記録する"
            android:layout_width="328dp"
            android:layout_height="66dp"
            android:id="@+id/button" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.496"
            android:textSize="36sp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <Button
            android:text="ログを見る"
            android:layout_width="328dp"
            android:layout_height="66dp"
            android:id="@+id/button2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.493"
            android:textSize="36sp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/button"/>
    <TextView
            android:text="トレログ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:textSize="42sp" android:textStyle="bold" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.515"/>
</android.support.constraint.ConstraintLayout>